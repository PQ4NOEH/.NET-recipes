<?xml version="1.0"?>
<ServiceDefinition name="Heracles" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-06.2.4">
    <WebRole name="Heracles.Web" vmsize="Small">
        <Sites>
            <Site name="Web">
                <Bindings>
                    <Binding name="Endpoint1" endpointName="HttpEndpoint" />
                </Bindings>
            </Site>
        </Sites>
        <Endpoints>
            <InputEndpoint name="HttpEndpoint" protocol="http" port="80" />
        </Endpoints>
        <ConfigurationSettings>
            <Setting name="Microsoft.ServiceBus.SharedAccessKeyName" />
            <Setting name="Microsoft.ServiceBus.SharedAccessKey" />
            <Setting name="Microsoft.ServiceBus.ServiceNamespace" />
            <Setting name="Altea.ApplicationName" />
            <Setting name="Microsoft.WindowsAzure.Plugins.Caching.ClientDiagnosticLevel" />
            <Setting name="MicrosoftTranslator.Id" />
            <Setting name="MicrosoftTranslator.Secret" />
        </ConfigurationSettings>
        <Certificates>
        </Certificates>
        <LocalResources>
            <LocalStorage name="DiagnosticStore" sizeInMB="20000" cleanOnRoleRecycle="false" />
            <LocalStorage name="WiseBoardStore" cleanOnRoleRecycle="true" sizeInMB="4096" />
        </LocalResources>
        <Startup priority="-2">
            <Task commandLine="Microsoft.WindowsAzure.Caching\ClientPerfCountersInstaller.exe install" executionContext="elevated" taskType="simple" />
            <Task commandLine="Microsoft.WindowsAzure.Caching\ClientPerfCountersInstaller.exe install" executionContext="elevated" taskType="simple" />
        </Startup>
        <Imports>
            <Import moduleName="Caching" />
            <Import moduleName="RemoteAccess" />
        </Imports>
    </WebRole>
    <WorkerRole name="Heracles.Worker" vmsize="Small">
        <ConfigurationSettings>
            <Setting name="Altea.ApplicationName" />
        </ConfigurationSettings>
        <Imports>
            <Import moduleName="RemoteAccess" />
            <Import moduleName="RemoteForwarder" />
        </Imports>
    </WorkerRole>
</ServiceDefinition>